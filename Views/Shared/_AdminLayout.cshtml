@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="d-flex">
    <nav class="bg-dark text-light p-3 sidebar vh-100 shadow-sm" style="width:250px;">
        <div class="mb-4 text-center">
            <a class="navbar-brand fw-bold fs-4 text-gradient" asp-controller="AdminDashboard" asp-action="Index">
                FatFod Admin <i class="fa-solid fa-bowl-food"></i>
            </a>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-light fw-semibold" asp-controller="AdminDashboard" asp-action="Index">
                    <i class="fa-solid fa-chart-line me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light fw-semibold" asp-controller="Users" asp-action="Index">
                    <i class="fa-solid fa-users me-2"></i> Users
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light fw-semibold" asp-controller="Orders" asp-action="Index">
                    <i class="fa-solid fa-receipt me-2"></i> Orders
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light fw-semibold" asp-controller="Products" asp-action="Index">
                    <i class="fa-solid fa-box-open me-2"></i> Products
                </a>
            </li>
        </ul>
    </nav>

    <div class="flex-grow-1 d-flex flex-column">
        <header class="d-flex justify-content-between align-items-center px-4 py-3 border-bottom shadow-sm bg-white">
            @* h5 thanh search *@
            <h5 class="mb-0 text-light">@title</h5> 
            <div>
                <span class="me-3 fw-bold">Welcome, Admin</span>
                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill ">Logout</button>
                </form>
            </div>
        </header>

        <main class="p-4 flex-grow-1">
            @RenderBody()
        </main>

        <footer class="bg-dark text-light text-center py-3 mt-auto shadow-sm">
            <small>© 2025 - FatFod Admin Dashboard</small>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        // Fade-in hiệu ứng cho các card
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".dashboard-card").forEach((card, i) => {
                setTimeout(() => {
                    card.classList.add("fade-in");
                }, i * 150); // delay theo index cho hiệu ứng domino
            });
        });

        // Hiệu ứng sidebar active link
        const links = document.querySelectorAll(".sidebar .nav-link");
        links.forEach(link => {
            link.addEventListener("click", () => {
                links.forEach(l => l.classList.remove("active"));
                link.classList.add("active");
            });
        });
    </script>
    
</body>
</html>
